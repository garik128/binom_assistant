# Nginx конфигурация для доступа через поддомен (binom.example.com)
# Binom Assistant будет доступен по адресу: http://binom.example.com или https://binom.example.com

# Redirect HTTP -> HTTPS (раскомментируйте после настройки SSL)
# server {
#     listen 80;
#     listen [::]:80;
#     server_name binom.example.com;
#     return 301 https://$server_name$request_uri;
# }

server {
    # HTTP порт (80) - для начальной настройки
    listen 80;
    listen [::]:80;

    # HTTPS порт (443) - раскомментируйте после получения SSL сертификата
    # listen 443 ssl http2;
    # listen [::]:443 ssl http2;

    # Замените на ваш поддомен
    server_name binom.example.com;

    # SSL сертификаты (настройте через ispmanager/fastpanel или вручную)
    # ssl_certificate /etc/letsencrypt/live/binom.example.com/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/binom.example.com/privkey.pem;

    # SSL настройки (рекомендуется)
    # ssl_protocols TLSv1.2 TLSv1.3;
    # ssl_ciphers HIGH:!aNULL:!MD5;
    # ssl_prefer_server_ciphers on;

    # Логи
    access_log /var/log/nginx/binom-assistant-access.log;
    error_log /var/log/nginx/binom-assistant-error.log;

    # Максимальный размер загружаемых файлов
    client_max_body_size 10M;

    # Proxy к Docker контейнеру
    location / {
        proxy_pass http://127.0.0.1:8000;

        # Заголовки для корректной работы
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # WebSocket support (если потребуется)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Таймауты
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        # Буферизация
        proxy_buffering off;
    }
}
