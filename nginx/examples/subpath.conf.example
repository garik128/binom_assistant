# Nginx конфигурация для доступа через субпапку (example.com/binom)
# Binom Assistant будет доступен по адресу: http://example.com/binom или https://example.com/binom
#
# ВАЖНО: Этот вариант требует изменения в FastAPI приложении!
# В файле binom_assistant/interfaces/web/main.py нужно добавить root_path:
#   app = FastAPI(..., root_path="/binom")
#
# Или установить переменную окружения:
#   FASTAPI_ROOT_PATH=/binom

# Redirect HTTP -> HTTPS (раскомментируйте после настройки SSL)
# server {
#     listen 80;
#     listen [::]:80;
#     server_name example.com www.example.com;
#     return 301 https://$server_name$request_uri;
# }

server {
    # HTTP порт (80) - для начальной настройки
    listen 80;
    listen [::]:80;

    # HTTPS порт (443) - раскомментируйте после получения SSL сертификата
    # listen 443 ssl http2;
    # listen [::]:443 ssl http2;

    # Замените на ваш домен
    server_name example.com www.example.com;

    # SSL сертификаты (настройте через ispmanager/fastpanel или вручную)
    # ssl_certificate /etc/letsencrypt/live/example.com/fullchain.pem;
    # ssl_certificate_key /etc/letsencrypt/live/example.com/privkey.pem;

    # SSL настройки (рекомендуется)
    # ssl_protocols TLSv1.2 TLSv1.3;
    # ssl_ciphers HIGH:!aNULL:!MD5;
    # ssl_prefer_server_ciphers on;

    # Логи
    access_log /var/log/nginx/binom-assistant-access.log;
    error_log /var/log/nginx/binom-assistant-error.log;

    # Максимальный размер загружаемых файлов
    client_max_body_size 10M;

    # Главная страница вашего сайта (если есть)
    location / {
        # Ваш основной сайт или заглушка
        return 200 "Main site";
    }

    # Binom Assistant на субпапке /binom
    location /binom/ {
        # Убираем префикс /binom перед проксированием
        rewrite ^/binom/(.*) /$1 break;

        proxy_pass http://127.0.0.1:8000;

        # Заголовки для корректной работы
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # ВАЖНО: Передаем префикс в приложение
        proxy_set_header X-Forwarded-Prefix /binom;

        # WebSocket support (если потребуется)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Таймауты
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;

        # Буферизация
        proxy_buffering off;
    }

    # Статические файлы для Binom Assistant
    location /binom/static/ {
        rewrite ^/binom/static/(.*) /static/$1 break;
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
    }

    # API endpoints для Binom Assistant
    location /binom/api/ {
        rewrite ^/binom/(.*) /$1 break;
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Prefix /binom;
    }
}
